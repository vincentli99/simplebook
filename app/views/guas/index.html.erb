<div class="container">
    <% if user_signed_in? %>
    <div class="row">
        <div class="col-md-12">
        <%= link_to '新增卦', new_gua_path, class:'btn btn-primary' %>
        </div>
    </div>
    <% end %>
    
    <div class="row table-title">
    <% if user_signed_in? %>
                
                    <div class="col-md-3">
                        <strong>卦名</strong>
                    </div>
                    <div class="col-md-3">
                        <strong>創業解釋</strong>
                    </div>
                    <div class="col-md-3">
                        <strong>卦辭</strong>
                    </div>
                    <div class="col-md-3">
                        <strong>動作</strong>
                    </div>
         
                
    <% else %>
             
                    <div class="col-md-4">
                        <strong>卦名</strong>
                    </div>
                    <div class="col-md-4">
                        <strong>創業解釋</strong>
                    </div>
                    <div class="col-md-4">
                        <strong>卦辭</strong>
                    </div>
                
                
    <% end %>
    </div>
    <hr>
    <% @guas.each do |gua| %>
        
            <% if user_signed_in? %>
                <div class="row">
                    <div class="col-md-3">
                        第<%= gua.serial %>卦 - <%= link_to gua.name, gua_path(gua) %> <%= gua.yaos.length %>爻 <span class="warn"><%= '未完成' if gua.yaos.length <7 %></span>
                    </div>
                    <div class="col-md-3">
                        <%= gua.explain2 %>
                    </div>
                    <div class="col-md-3">
                        <%= gua.gtext %>
                    </div>
                    <div class="col-md-3">
                    <%= link_to edit_gua_path(gua), class:'btn btn-default' do %>
                      <i class='glyphicon glyphicon-pencil'></i>
                    <% end %>
                    <%= link_to gua, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-default' do %>
                        <i class='glyphicon glyphicon-trash'></i>
                    <% end %>
                    </div>
                </div>
            <% else %>
                <div class="row">
                    <div class="col-md-4">
                        第<%= gua.serial %>卦 - <%= link_to gua.name, gua_path(gua) %> <%= gua.yaos.length %>爻 <span class="warn"><%= '未完成' if gua.yaos.length <7 %></span>
                    </div>
                    <div class="col-md-4">
                        <%= gua.explain2 %>
                    </div>
                    <div class="col-md-4">
                        <%= gua.gtext %>
                    </div>
                </div>
            
    <% end %>
            
        
        <hr>
    <% end %>
</div>
